<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/perfil_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/indicator_circle_app_bottom"
        android:src="@drawable/frag_img_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="258dp"
        android:layout_height="53dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/add_shape_list"
        android:text="Nome Do Usuario"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="258dp"
        android:layout_height="53dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/add_shape_list"
        android:text="â‚¬ 1100,00"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_save_card_profile"
        android:visibility="gone"
        android:layout_width="301dp"
        android:layout_height="57dp"
        android:backgroundTint="#2F2F2F"
        android:gravity="center"
        android:text="Salvar"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.779" />

    <Button
        android:id="@+id/btn_edt_profile_name"
        android:layout_width="28dp"
        android:layout_height="53dp"
        android:backgroundTint="#9E9797"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_edt_profile_gasto"
        android:layout_width="28dp"
        android:layout_height="53dp"
        android:backgroundTint="#9E9797"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="19dp"
        android:layout_height="22dp"
        android:background="@drawable/edt"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edt_profile_name"
        app:layout_constraintEnd_toEndOf="@+id/btn_edt_profile_name"
        app:layout_constraintStart_toStartOf="@+id/btn_edt_profile_name"
        app:layout_constraintTop_toTopOf="@+id/btn_edt_profile_name" />

    <ImageView
        android:layout_width="19dp"
        android:layout_height="22dp"
        android:background="@drawable/edt"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edt_profile_gasto"
        app:layout_constraintEnd_toEndOf="@+id/btn_edt_profile_gasto"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/btn_edt_profile_gasto"
        app:layout_constraintVertical_bias="0.516" />
</androidx.constraintlayout.widget.ConstraintLayout>